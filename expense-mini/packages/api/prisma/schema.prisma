generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider          = "mysql"
  url               = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")  // <â€” add this line
}


model Category {
  id        Int       @id @default(autoincrement())
  name      String    @unique
  createdAt DateTime  @default(now())
  expenses  Expense[]
}

model Expense {
  id          Int       @id @default(autoincrement())
  amount      Decimal   @db.Decimal(10,2)
  date        DateTime
  merchant    String
  note        String?
  categoryId  Int?
  category    Category? @relation(fields: [categoryId], references: [id])
  createdAt   DateTime  @default(now())
}
